<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:titleMarginStart">0dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_divider</item>
    </style>

    <style name="editText">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColorHint">@color/editText_text_hint</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="inputEditText">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColorHint">@color/editText_text_hint</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="blueButton">
        <item name="android:background">@drawable/blue_rectangle</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="whiteButton" parent="blueButton">
        <item name="backgroundTint">@color/background</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="countVacancies">
        <item name="android:background">@drawable/blue_rectangle</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:paddingHorizontal">12dp</item>
    </style>

    <style name="text_32">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/background_reverse</item>
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="android:fontWeight">700</item>
    </style>

    <style name="text_22">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/background_reverse</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="text_16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/background_reverse</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="text_16_hint" parent="text_16">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

    <style name="text_btn_filter_16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:elevation">0dp</item>
        <item name="cornerRadius">@dimen/dm_12dp</item>
    </style>

    <style name="text_12" parent="text_16">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="bottomNavigation">
        <item name="android:background">@color/background</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="itemIconTint">@color/bottom_navigation</item>
        <item name="itemTextColor">@color/bottom_navigation</item>
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="itemPaddingBottom">@dimen/padding_8dp</item>
        <item name="itemPaddingTop">@dimen/padding_8dp</item>
        <item name="itemActiveIndicatorStyle">@style/App.Custom.Indicator</item>
    </style>

    <style name="aboutItem">
        <item name="android:layout_width">@dimen/dm_zero_dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/dm_about_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/dm_about_item_margin_top</item>
        <item name="android:textSize">@dimen/dm_about_item_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/about_text_color</item>
    </style>

    <style name="aboutHeader">
        <item name="android:layout_width">@dimen/dm_zero_dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/dm_about_margin_horizontal</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">@dimen/dm_about_item_margin_top</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textColor">@color/about_text_color</item>
        <item name="android:textSize">@dimen/dm_about_header_text_size</item>
    </style>

    <style name="placeHolderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dm_about_item_margin_top</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/dm_placeholder_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/about_text_color</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/background</item>
    </style>

    <style name="imageButton">
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="inputSalaryLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="cursorColor">@color/blue</item>

    </style>

</resources>
